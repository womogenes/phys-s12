---
import Base from '../layouts/Base.astro';
import ArticleBody from '../components/ArticleBody.astro';

const { frontmatter } = Astro.props;
---

<Base title={frontmatter.title}>
  <div slot="body">
    <main>
      <ArticleBody>
        <slot />
      </ArticleBody>
    </main>
  </div>
</Base>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 3em;
  }
</style>
